<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <app.com.example.android.adoptame.adapter.SquareImageView
        android:id="@+id/grid_item_pet_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/translucent_grey"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/grid_item_petname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/grid_item_petsex_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>